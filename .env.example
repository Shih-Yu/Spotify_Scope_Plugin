# Scope Spotify Plugin - Environment Variables Template
# Copy this file to .env.local and fill in your values

# ===========================================
# GENIUS API (for lyrics) - Get from genius.com/api-clients
# ===========================================
GENIUS_CLIENT_ID=your_genius_client_id_here
GENIUS_CLIENT_SECRET=your_genius_client_secret_here
GENIUS_API_TOKEN=your_genius_access_token_here

# ===========================================
# SPOTIFY API (for live playback) - Get from developer.spotify.com/dashboard
# ===========================================
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:8888/callback

# ===========================================
# HUGGING FACE (for Scope models)
# ===========================================
HUGGINGFACE_TOKEN=your_huggingface_token_here

# ===========================================
# RUNPOD SETTINGS
# ===========================================
HEADLESS_MODE=true
